<p id="notice"><%= notice %></p>

<h1>Advertisments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Imagepath</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisments.each do |advertisment| %>
      <tr>
        <td><%= advertisment.title %></td>
        <td><%= advertisment.description %></td>
        <td><%= advertisment.imagepath %></td>
        <td><%= advertisment.startdate %></td>
        <td><%= advertisment.enddate %></td>
        <td><%= link_to 'Show', advertisment %></td>
        <td><%= link_to 'Edit', edit_advertisment_path(advertisment) %></td>
        <td><%= link_to 'Destroy', advertisment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

